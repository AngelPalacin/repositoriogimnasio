<resources>
    <style name="NoStatusBar" parent="Theme.MyApp">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LightInputOverDarkBg" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/primaryL</item>
        <item name="android:textColorHint">#99ffffff</item>
        <item name="endIconTint">@color/surfaceL</item>
    </style>
    
    <style name="IconStyle" parent="Theme.MyApp">
        <item name="android:tint">?attr/colorOnSurface</item>
        <item name="android:alpha">0.5</item>
    </style>
    
    <style name="IconFavourite" parent="Theme.MyApp">
        <item name="android:tint">?attr/colorSecondary</item>
    </style>

    <style name="WorkoutDay" parent="Theme.MyApp">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.MyApp">
        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">?android:attr/colorBackground</item>
    </style>
    
    <style name="DialogAnimations">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>
